<%= render 'layouts/navbar' %>

    <!-- Begin main content -->
    <div class="container">
        <div class="row">
            <div class="col-xs-8 col-xs-offset-2 well extra-spacing">
            <div class='col-md-8 col-md-offset-2 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2'>
                <h2>Add New User</h2>
                <p>All fields are required to add a new user. The username is entered to log in. The email is only used for communication.</p>
                <br>
                <form>
                    <div class="form-group">
                        <label for="newUser">Username: </label>
                        <input type="text" class="form-control" id="newUser">
                    </div>
                    <div class="form-group">
                        <label for="email">Email: </label>
                        <input type="email" class="form-control" id="email">
                    </div>
                    <div class="form-group">
                        <label for="userType">User Level: </label>
                        <select class="form-control">
                            <option value="standard">Standard</option>
                            <option value="admin">Admin</option>
                            <option value="entry">Entry</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="password">Password: </label>
                        <input type="password" class="form-control" id="password">
                    </div>
                    <div class="form-group">
                        <label for="passConfirm">Confirm Password: </label>
                        <input type="password" class="form-control" id="passConfirm">
                    </div>
                    <div class="form-group">
                        <a href="/admin/admin1">
                            <btn class="btn btn-success btn-wide extra-right-margin">Add New User</btn>
                        </a>
                        <a href="/admin/admin1">
                            <btn class="btn btn-danger btn-wide">Cancel</btn>
                        </a>
                    </div>
                </form>

            </div>
        </div>
        </div>
    </div>