<% provide(:title, "Home") %>
<%= render 'layouts/navbar' %>

    <div class='container white-container'>
        <div class="row">
            <%= render 'layouts/flash_messages' %>
            <div class="col-xs-10 col-xs-offset-1">
                <h2>Unscheduled Pickups</h2>
                <p>Click the 'Add New Pickup' button to create a new pickup or select a pickup from the list below to edit, schedule, or reject it.</p>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-xs-5 col-xs-offset-1">
                <a href="/pickups/new">
                    <btn class="btn btn-success"><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Add New Pickup</btn>
                </a>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                <table class="table table-hover table-striped table-responsive">
                    <thead>
                        <tr>
                            <th>Last Name</th>
                            <th>Town</th>
                            <th>Quantity</th>
                            <th>Item Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%@pickups.each do |pickup|%>
                      
                            <tr onclick="location.href='<%=edit_pickup_path(pickup)%>'">
                                <td><%=pickup.donor_last_name%></td>
                                <td><%=pickup.donor_city%></td>
                                <td><% if pickup.number_of_items >= 10 %>
                                          <%='10+' %>
                                      <% else %>
                                          <%=pickup.number_of_items%>
                                      <% end %>
                                      <% if pickup.number_of_items == 1 %>
                                          <%="item"%>
                                        <% else %>
                                            <%="items"%></td>
                                        <%end%>    
                                <td><%if pickup.item_notes.blank?%>
                                        <%="None"%>
                                    <%end%>
                                <%= truncate(pickup.item_notes, length:65) %></td>
                            </tr>
                        <%end%> 
                    </tbody>
                </table>
            </div>
        </div>

    </div>